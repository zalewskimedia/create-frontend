{
  "name": "create-frontend",
  "version": "1.0.0",
  "description": "Simple frontend blueprint for Wagtail apps",
  "scripts": {
    "dev": "parcel watch",
    "build": "parcel build"
  },
  "defaultTargetOptions": {
  "distDir": "./", 
  "publicUrl": "/"
  },
  "targets": {
    "main": {
      "source": "src/js/[change me].js",
      "distDir": "[change me]/static/js",
      "publicUrl": "/static/js/"
    },
    "styles": {
      "source": "src/css/[change me].css",
      "distDir": "[change me]/static/css",
      "publicUrl": "/static/css/"
    },
    "fonts": {
      "source": "src/fonts/**/*.{woff,woff2,ttf,otf,eot}",
      "distDir": "[change me]/static/fonts",
      "publicUrl": "/static/fonts/"
    },
    "images": {
      "source": "src/img/**/*.{png,jpg,jpeg,svg,gif,webp}",
      "distDir": "[change me]/static/images",
      "publicUrl": "/static/img/"
    }
  },
  "keywords": [],
  "author": "Wojciech Zalewski",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.3",
    "alpinejs": "^3.14.9",
    "axios": "^1.8.4",
    "parcel": "^2.14.4",
    "tailwindcss": "^4.1.3"
  }
}
